    "happy-dom": "^14.11.2",
    "husky": "8.0.3",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lint-staged": "13.2.2",
    "path": "^0.12.7",
    "prettier": "^3.3.3",
    "stylelint": "^15.11.0",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^0.25.2",
