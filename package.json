    "pinia-plugin-persistedstate": "^3.2.1",
    "uuid": "^9.0.1",
    "vue": "^3.4.19",
    "vue-clipboard3": "^2.0.0",
    "vue-i18n": "10.0.0-alpha.4",
    "vue-router": "4"
  },
  "devDependencies": {
    "@fs/eslint-config": "^1.3.1",
    "@fs/prettier-config": "^1.3.1",
