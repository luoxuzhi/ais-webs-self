  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev",
    "sit": "vite --mode sit",
    "uat": "vite --mode uat",
    "build:sit": "cross-env MODE=sit  node build/build.js",
    "preview": "vite preview --mode sit",
    "prettier:fix": "prettier --write **/*.{js,json,tsx,css,less,scss,vue,html,md}",
    "stylelint:check": "stylelint \"**/*.{vue,scss,sass,css,less}\"",
    "stylelint:fix": "stylelint \"**/*.{vue,scss,sass,css,less}\" --fix",
    "stylelint:fix:bill": "stylelint \"**/bill/**/*.{vue,scss,sass,css,less}\" --fix",
    "eslint:check": "eslint --ext .vue,.js,.jsx,.ts,.tsx ./",
    "eslint:check:bill": "eslint --ext .vue,.js,.jsx,.ts,.tsx ./src/projects/finloop/bill",
    "eslint:fix": "eslint --fix --ext .vue,.js,.jsx,.ts,.tsx ./",
    "eslint:fix:bill": "eslint --fix --ext .vue,.js,.jsx,.ts,.tsx ./src/projects/finloop/bill",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "ts-compile-check": "vue-tsc --noEmit",
    "test": "vitest --typecheck",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
